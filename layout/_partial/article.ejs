<article id="<%= post.layout %>-<%= post.slug %>" class="post mdl-card mdl-shadow--2dp" style="width:100%;">
	<%- partial('post/gallery') %>
	<div class="entry-meta-header date">
		<%- partial('post/date', {class_name: 'article-date', date_format: null}) %>
  </div>
	<div class="mdl-card__title">
		<%- partial('post/title', {class_name: 'article-title'}) %>
	</div>
	<div class="mdl-card__supporting-text" style="margin-top: -1em">
		<% if (post.excerpt && index){ %>
			<%- post.excerpt %>
			<% if (theme.excerpt_link){ %>
				<div class="mdl-card__actions mdl-card--border">
					<a  class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect"
					 href="<%- config.root %><%- post.path %>#more"><%= theme.excerpt_link %></a>
			  </div>
      <% } %>
    <% } else { %>
    	<%- post.content %>
    <% } %>
	</div>
	<% if (!index){ %>
    <%- partial('post/nav') %>
  <% } %>

	<% if (!index && post.comments && config.disqus_shortname){ %>
	<section id="comments">
	  <div id="disqus_thread" style="padding:20px;">
	    <noscript>Please enable JavaScript to view the <a href="//disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
	  </div>
	</section>
	<% } %>
</article>
