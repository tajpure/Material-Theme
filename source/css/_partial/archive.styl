.archive
  color: #616161

  .entry-meta-header
    .date
      margin-left: -1.1em

  & .entry-content h1
    margin-top: 10px
    font-size: 140%

#page-nav
  text-align: center
  text-transform: uppercase
  font-size: 80%
  font-weight: normal
  letter-spacing: .1em
  a, span
    display: inline-block
    min-width: 1.2em
    padding: 6px 8px
    margin: 1px 5px 1px 5px
    border-radius: 3px
    background-clip: padding-box
  a
    color: color-default
    text-decoration: none
    &:hover
      background-color: #f5f5f5
  .page-number
    display: inline-block
  .current
    background: #ccc
    color: #fff
  .space
    color: color-border
  .next
    min-width: 5em
