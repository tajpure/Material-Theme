// tablet
@media (min-width:768px) and (max-width:1040px)
  #container
    width: 700px

  #main
    padding-left: 0

  .entry-meta-header
    position: static
    margin-left: 1em
    margin-top: 1em
    width: auto
    .meta-elements
      display: inline
      margin-right: 1em
    .commentscount
      display: none

  .post
    font-size: 100%
    .entry-title
      font-size: 180%
    .entry-content pre
      white-space: pre-wrap
      word-wrap: break-word
      word-break: break-all
      overflow-x: hidden

// Mobile
@media (max-width:767px)
  #container
    width: 93.75%
    word-wrap: break-word

  #header
    display: none

  .mobile-nav-panel
    display: block
    margin-bottom: 10px

  .nav
    height: 0
    width: 36%
    overflow: hidden
    margin: 0
    position: absolute
    top: 45px
    left: 0
    &.active
      height: auto
      overflow: visible
      z-index: 2
    ul
      display: block
      li
        display: block
        width: 100%
        margin: 0
        a
          display: block
          border: none
          padding: 0em
          color: #fff
          text-align: center

  #header
    margin: 2em 0 4em 0
    text-align: center
    position: static

  .blog-title
    float: none

  #main
    padding-left: 0
    margin-bottom: 3em

  .entry-meta-header
    position: relative
    margin-top: .5em
    width: auto
    .meta-elements
      display: inline
      margin-right: 1em
    .commentscount
      display: none

  .post
    font-size: 90%
    .entry-title
      font-size: 180%
    .entry-content
      line-height: 1.8
      blockquote
        margin: 1em 0
      table th, table td
        word-break: break-all
      iframe
        width: 100% !important

  .pagenation span,.pagenation a
    padding: 5px
    margin: 0


  #footer
    margin: 0 0 3em 0
    .footer-blog-title
      float: none
      margin-bottom: 1em
