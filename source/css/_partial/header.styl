#header
  display: block
  margin: 3em 0
  position: relative
  *zoom: 1
  &:after
    display: block
    visibility: hidden
    font-size: 0
    height: 0
    clear: both
    content: "."

.mobile-nav-panel
  display: none
  padding: 15px 0 0
  .icon-reorder
    cursor: pointer
    display: inline-block
    width: 18px
    height: 17px
    background: url('/images/icon-reorder@2x.png') no-repeat 0 0
    background-size: 18px 17px

.nav
  position:relative
  margin: 4em
  width: 100%
  a,
  label
    color:#fff
    text-decoration:none
    font: 1.0em sans-serif
    transition:color .3s ease-in-out

  ul
    padding: 10px
    margin: 0 auto
    width:100%
    list-style:none

    > li
      float:left
      padding:.55em .55em
      width:19%
      background-image: url(../images/bg_header.png)
      text-align:center
      transition-duration: .3s
      transition-timing-function: ease-in-out
      transition-property: box-shadow, color
      box-shadow:
        0 .05em .25em 0 rgba(0, 0, 0, .35)

      cursor: pointer

      &:hover
        background-color:rgba(0, 0, 0, .85)
        color:#fff
        box-shadow:
          0 .05em .25em 0 rgba(0, 0, 0, .35),
          inset 0 0 0 2em rgba(0, 0, 0, .3)


        > a
          color:#fff
/* small screens */
#nav
  ul
    display:none
    height:100%

  label
    position:relative
    display:block
    width:100%
    min-height:2.25em
    padding:.45em
    font-size:1.1em
    margin:0
    border: .15em solid rgba(60, 60, 60, .2)
    background-image: $img_bg

  label:after
    position: absolute
    right: .25em
    top: 0
    content:"\2261"
    font-size:1.8em


  input[type=checkbox]:checked ~ label:after
    color:#222


  input[type=checkbox]:checked ~ ul
    display:block

    > li
      width:100%
      opacity:.8
      text-align:left

      &:after
        position:absolute
        right:.25em
        content:"\203A"
        font: bold 1.4em sans-serif


#nav-rss-link
  &:before
    content: "\f09e"

#nav-search-btn
  &:before
    content: "\f002"

#search-form-wrap
  display: none
  position: absolute
  top: 10px
  width: 150px
  height: 30px
  right: 280px
  opacity: 0
  transition: 0.2s ease-out
  &.on
    display: block
    opacity: 1
    right: 55px
  @media (max-width:767px)
    width: 100%
    left: -100%

.search-form
  position: absolute
  top: 0
  left: 0
  right: 0
  background: #fff
  padding: 3px 15px
  border-radius: 15px
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.3)

.search-form-input
  border: none
  background: none
  color: color-default
  letter-spacing: 1px
  width: 90%
  font: 13px font-sans
  outline: none
  &::-webkit-search-results-decoration
  &::-webkit-search-cancel-button
    -webkit-appearance: none

.search-form-submit
  position: absolute
  top: 50%
  right: 10px
  margin-top: -7px
  font: 13px font-icon
  border: none
  background: none
  color: #bbb
  cursor: pointer
  &:hover, &:focus
    color: #777
